email = cydonia572@gmail.com
name = Thomas Royer

[core]
excludesfile = ~/.gitignore
editor = vim
autocrlf = input
pager = diff-so-fancy | less --tabs=4 -RFX

[push]
default = current

[http]
sslVerify = false

[fetch]
prune = true

[help]
autocorrect = 1

[merge]
tool = meld
conflictstyle = diff3

[pager]
diff = diff-so-fancy | less --tabs=1,5 -RFX
show = diff-so-fancy | less --tabs=1,5 -RFX
